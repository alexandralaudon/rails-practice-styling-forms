<%= form_for(@person, html: {class: "form-horizontal"}) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <label class="col-md-2 control-label"> <%= f.label :first_name %> </label>
    <div class="col-md-3">
      <input class="form-control" placeholder="First Name">
    </div>
  </div>


  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
    </div>
  </div>


    <div class="form-group">
      <div class="col-md-4">
        <ul><%= f.label :first_name %>
        <%= f.text_field :first_name %></ul>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-4">
        <ul><%= f.label :last_name %>
        <%= f.text_field :last_name %></ul>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
      <ul><%= f.label :date_of_birth %>
        <%= f.date_field :date_of_birth %></ul>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
      <ul><%= f.label :bio %>
        <%= f.text_area :bio %></ul>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
      <ul><%= f.label :active %>
        <%= f.check_box :active %></ul>
      </div>
    </div>


      <div class="row">
        <div class="col-md-3 col-md-offset-1">
          <%= link_to "Create Person", "#", class: "btn btn-primary" %>
          <!-- This creates a button, link_to (argument on page, named route, HTML argument) -->
          <%= link_to "cancel", "#", class: "btn btn-default", data: {confirm:"Are you sure you want to cancel?"} %>
          <!-- This creates a button, but has a CONFIRM message -->
        </div>
      </div>



  <!-- <div class="actions">
    <%= f.submit %>
  </div> -->



<% end %>
